<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TaxiApplication</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/> *@
    @* <script type="javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"/>
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/> *@
    <link rel="stylesheet" href="~/TaxiApplication.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TaxiApplication</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                    @* </li> *@
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                    @* </li> *@
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" asp-area="" asp-controller="Home" asp-action="Map">Map</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1 justify-content-end" id="auth">
                    <li class="nav-item">
                        <a class=" nav-link btn btn-primary mx-2" asp-area="" asp-controller="Home" asp-action="SignIn">SingIn</a>
                    </li>
                    <li class="nav-item align-content-end">
                        <a class="nav-link btn btn-primary mx-2" asp-area="" asp-controller="Home" asp-action="LogIn">LogIn</a>
                    </li>
                    <li class="nav-item">
                        <a class=" nav-link btn btn-primary mx-2" onclick="logout()" asp-area="" >Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container ">
    <main role="main" class="pb-3 mt-3">
        @RenderBody()
    </main>
</div>

<footer class=" footer text-muted ">
    <div class="container text-center">
        &copy; 2023 - TaxiApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
@* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>